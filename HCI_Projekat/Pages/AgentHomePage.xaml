<Page x:Class="HCI_Projekat.Pages.AgentHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Projekat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AgentHomePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="120"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
            <ComboBox MinWidth="120" SelectedIndex="0" IsReadOnly="True" Foreground="White" ToolTip="Odaberite prikaz" SelectionChanged="OnSelectionChanged">
                <ComboBoxItem Content="Putovanja"/>
                <ComboBoxItem Content="Atrakcije"/>
                <ComboBoxItem Content="Restorani"/>
                <ComboBoxItem Content="Smestaj"/>
                <ComboBoxItem Content="Pregled za mesec"/>
                <ComboBoxItem Content="Pregled po putovanju"/>
            </ComboBox>
            
        </StackPanel>
        <Frame Name="AgentFrame" Grid.Column="1"/>

    </Grid>
</Page>
