<Page x:Class="HCI_Projekat.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Projekat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Page.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="2" Opacity="0.8" 
                          Color="Black" BlurRadius="3"/>
    </Page.Resources>

    <Grid Margin="0,0,-182,-76">
        <!-- Part 1: Banner -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <!-- 20% of page height -->
            <RowDefinition Height="7*"/>
            <!-- 70% of page height -->
            <RowDefinition Height="1*"/>
            <!-- 10% of page height -->
        </Grid.RowDefinitions>

        <Grid Background="LightGray">
            <!-- Background image -->
            <Image Source="/images/travel.png" Stretch="UniformToFill"></Image>
            <!-- Text overlay -->
            <TextBlock Text="Agencija 6" Foreground="White" FontSize="20" Margin="15" 
                       Effect="{StaticResource DropShadowEffect}"/>
        </Grid>

        <!-- Part 2: Tourist Trips -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel>
                <!-- Load trip cards dynamically -->
                <ItemsControl ItemsSource="{Binding TripsList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" 
                                    Background="DarkGray" Margin="10" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" 
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding Price, StringFormat='{}{0}$'}" 
                                               Foreground="Green" FontSize="16" Margin="0 5 0 10"/>
                                    <TextBlock Text="polazak: {Binding StartingAddress}" 
                                               Foreground="White" Margin="0 0 0 5"/>
                                    <TextBlock Text="destinacija: {Binding EndingAddress}" 
                                               Foreground="White" Margin="0 0 0 5"/>
                                    <TextBlock Text="atrakcije: {Binding AttractionsCount}" 
                                               Foreground="White" Margin="0 0 0 5"/>
                                    <TextBlock Text="smeštaj: {Binding AccomodationsCount}" 
                                               Foreground="White" Margin="0 0 0 5"/>
                                    <TextBlock Text="restorani: {Binding RestaurantsCount}" 
                                               Foreground="White" Margin="0 0 0 5"/>
                                    <Button Content="Detalji" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>

        <!-- Part 3: Pagination -->
        <Border Grid.Row="2" Background="LightGray">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Total Trips: 10 | Current Page: 1" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
